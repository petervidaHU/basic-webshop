FROM node:16-alpine

WORKDIR /app

COPY package.json .

RUN yarn

COPY . .

ENV REACT_APP_BACKEND_HOST='localhost'
ENV REACT_APP_BACKEND_PORT=3001
ENV REACT_APP_BACKEND='http://${REACT_APP_BACKEND_HOST}:${REACT_APP_BACKEND_PORT}/'
ENV REACT_APP_PIC='http://${REACT_APP_BACKEND_HOST}:${REACT_APP_BACKEND_PORT}/public/'

CMD ["yarn","start"]